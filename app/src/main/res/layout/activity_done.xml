<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.select.mcmaps.getstart.LoginActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/colorPrimary"
        android:gravity="bottom"
        android:translationZ="@dimen/card_Z"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:layout_height="@dimen/app_bar_height">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:fitsSystemWindows="true"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/pic_loader_bar"
                android:layout_weight="1.0"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/text_main_margin"
                android:textSize="@dimen/main_title_size"
                android:text="@string/title_done" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical"
        tools:showIn="@layout/activity_login">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/text_main_margin"
            android:layout_marginRight="@dimen/text_main_margin"
            android:textSize="@dimen/normal_text_size"
            android:id="@+id/text_main"
            android:text="@string/text_all_done" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:id="@+id/layout_bottom"
        android:background="@color/colorGrey200"
        android:gravity="right|center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_next"
            android:textSize="@dimen/next_text_size"
            android:alpha="0.7"
            android:onClick="slideOut"
            android:textColor="@android:color/black"
            android:layout_marginRight="@dimen/next_margin"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>

    </LinearLayout>

</LinearLayout>
